{
  "name": "start-stop-state-machine",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "run-p lint type tape",
    "lint": "eslint .",
    "tape": "c8 --100 tape test.js",
    "build-docs": "documentation readme index.js -f md --readme-file README.md --section API --infer-private '^(#|_)'",
    "posttest": "c8 report --reporter=text-lcov > ./coverage/lcov.info",
    "type": "tsc",
    "prepublish": "npm run test",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^17.0.38",
    "@types/tape": "^4.13.2",
    "c8": "^7.11.3",
    "documentation": "^13.2.5",
    "eslint": "^8.16.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "tape": "^5.5.3",
    "typescript": "^4.7.2"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {}
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "tiny-typed-emitter": "^2.1.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "npm run build-docs"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
